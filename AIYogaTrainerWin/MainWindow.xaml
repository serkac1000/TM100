<Window x:Class="AIYogaTrainerWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Yoga Trainer" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with title -->
        <Border Grid.Row="0" 
                Background="{StaticResource DarkGradientBrush}" 
                BorderBrush="{StaticResource AccentBrush}"
                BorderThickness="0,0,0,1" 
                Padding="20,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="AI YOGA TRAINER" 
                           FontFamily="Segoe UI Light" 
                           FontSize="24" 
                           Foreground="{StaticResource AccentBrush}">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="{StaticResource AccentColor}" 
                                          BlurRadius="10" 
                                          ShadowDepth="0" 
                                          Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text=" - REAL-TIME POSE DETECTION" 
                           FontFamily="Segoe UI Light" 
                           FontSize="20" 
                           Foreground="{StaticResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Main content area with webcam and skeleton overlay -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Webcam display and skeleton overlay -->
            <Border Grid.Column="0" 
                    BorderBrush="{StaticResource AccentBrush}" 
                    BorderThickness="1" 
                    Margin="0,0,10,0">
                <Grid>
                    <Image x:Name="WebcamFeed" Stretch="Uniform"/>
                    <Canvas x:Name="SkeletonCanvas"/>
                </Grid>
            </Border>
            
            <!-- Right side panel with pose info and controls -->
            <Grid Grid.Column="1" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Current pose info -->
                <Border Grid.Row="0" 
                        Background="{StaticResource SecondaryBackgroundBrush}" 
                        BorderBrush="{StaticResource AccentBrush}"
                        BorderThickness="1" 
                        Margin="0,0,0,10" 
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="CURRENT POSE" 
                                   FontFamily="Segoe UI Light" 
                                   FontSize="16" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock x:Name="CurrentPoseText" 
                                   Text="Not Detected" 
                                   FontFamily="Segoe UI" 
                                   FontSize="22" 
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,5,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="{StaticResource AccentColor}" 
                                                  BlurRadius="8" 
                                                  ShadowDepth="0" 
                                                  Opacity="0.7"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="ConfidenceText" 
                                   Text="Confidence: 0%" 
                                   FontFamily="Segoe UI Light" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Pose sequence -->
                <Border Grid.Row="1" 
                        Background="{StaticResource SecondaryBackgroundBrush}" 
                        BorderBrush="{StaticResource AccentBrush}"
                        BorderThickness="1" 
                        Margin="0,0,0,10" 
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="POSE SEQUENCE" 
                                   FontFamily="Segoe UI Light" 
                                   FontSize="16" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <UniformGrid Columns="3" Margin="0,10,0,0">
                            <Border x:Name="Pose1Border" 
                                    BorderBrush="{StaticResource TextSecondaryBrush}" 
                                    BorderThickness="2" 
                                    Margin="0,0,5,0"
                                    Width="70" Height="70">
                                <Image x:Name="Pose1Image" Stretch="Uniform"/>
                            </Border>
                            <Border x:Name="Pose2Border" 
                                    BorderBrush="{StaticResource TextSecondaryBrush}" 
                                    BorderThickness="2" 
                                    Margin="5,0,5,0"
                                    Width="70" Height="70">
                                <Image x:Name="Pose2Image" Stretch="Uniform"/>
                            </Border>
                            <Border x:Name="Pose3Border" 
                                    BorderBrush="{StaticResource TextSecondaryBrush}" 
                                    BorderThickness="2" 
                                    Margin="5,0,0,0"
                                    Width="70" Height="70">
                                <Image x:Name="Pose3Image" Stretch="Uniform"/>
                            </Border>
                        </UniformGrid>
                    </StackPanel>
                </Border>
                
                <!-- Action buttons -->
                <UniformGrid Grid.Row="2" Columns="2" Margin="0,0,0,10">
                    <Button x:Name="StartButton" 
                            Content="START" 
                            Margin="0,0,5,0"
                            Click="StartButton_Click"/>
                    <Button x:Name="StopButton" 
                            Content="STOP" 
                            Margin="5,0,0,0" 
                            IsEnabled="False"
                            Click="StopButton_Click"/>
                </UniformGrid>
                
                <!-- Status log -->
                <Border Grid.Row="3" 
                        Background="{StaticResource SecondaryBackgroundBrush}" 
                        BorderBrush="{StaticResource AccentBrush}"
                        BorderThickness="1" 
                        Margin="0,0,0,10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="StatusLog" 
                                   Text="Welcome to AI Yoga Trainer. Click START to begin..." 
                                   FontFamily="Consolas" 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   TextWrapping="Wrap" 
                                   Padding="10"/>
                    </ScrollViewer>
                </Border>
                
                <!-- Settings button -->
                <Button Grid.Row="4" 
                        x:Name="SettingsButton" 
                        Content="SETTINGS" 
                        Click="SettingsButton_Click"/>
            </Grid>
        </Grid>
        
        <!-- Footer status bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource DarkGradientBrush}" 
                BorderBrush="{StaticResource AccentBrush}"
                BorderThickness="0,1,0,0" 
                Padding="20,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="CameraStatusText" 
                           Text="Camera: Not Started" 
                           FontFamily="Segoe UI Light" 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text=" | " 
                           FontFamily="Segoe UI Light" 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock x:Name="ModelStatusText" 
                           Text="Model: Not Loaded" 
                           FontFamily="Segoe UI Light" 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
